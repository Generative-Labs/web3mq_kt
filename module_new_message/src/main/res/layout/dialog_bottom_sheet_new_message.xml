<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_bg_bottom_dialog">
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_back"
        android:src="@mipmap/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="23dp"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#18181B"
        android:textSize="18dp"
        android:layout_marginTop="14dp"
        android:id="@+id/tv_title_new_message"/>
    <EditText android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_bg_search"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_new_message"
        android:drawableLeft="@mipmap/ic_search"
        android:paddingLeft="17dp"
        android:layout_marginTop="14dp"
        android:id="@+id/et_search"/>

    <Button android:layout_width="172dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_search"
        app:layout_constraintLeft_toLeftOf="@+id/et_search"
        android:background="@drawable/shape_bg_btn_new_msg"
        android:drawableLeft="@mipmap/ic_add_friends"
        android:paddingLeft="30dp"
        android:text="Add friends"
        android:textAllCaps="false"
        android:textColor="#615EF0"
        android:layout_marginTop="16dp"
        android:id="@+id/btn_add_friends"/>

    <Button android:layout_width="172dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_search"
        app:layout_constraintRight_toRightOf="@+id/et_search"
        android:background="@drawable/shape_bg_btn_new_msg"
        android:drawableLeft="@mipmap/ic_create_room"
        android:paddingLeft="30dp"
        android:text="Create room"
        android:textAllCaps="false"
        android:textColor="#615EF0"
        android:layout_marginTop="16dp"
        android:id="@+id/btn_create_room"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_friends"
        app:layout_constraintLeft_toLeftOf="@+id/btn_add_friends"
        android:text="Friends"
        android:layout_marginTop="16dp"
        android:textColor="#3F3F46"
        android:textSize="14dp"
        android:id="@+id/tv_friends"/>

    <com.ty.module_common.view.Web3MQListView android:layout_width="0dp"
        android:layout_height="500dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_friends"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/list_friends"/>

