<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_back"
        android:src="@mipmap/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="23dp"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add friends"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#18181B"
        android:textSize="18dp"
        android:layout_marginTop="14dp"
        android:id="@+id/tv_title_new_message"/>
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_cancel"
        android:src="@mipmap/ic_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginRight="23dp" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_new_message"
        android:layout_marginTop="14dp"
        android:text="User ID"
        android:textColor="#18181B"
        android:layout_marginLeft="16dp"
        android:id="@+id/tv_label_user_id"/>
    <EditText android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_user_id"
        android:background="@drawable/shape_bg_common"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/et_user_id"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_user_id"
        android:layout_marginTop="14dp"
        android:text="Add invitation note"
        android:textColor="#18181B"
        android:layout_marginLeft="16dp"
        android:id="@+id/tv_label_invitation_note"/>
    <EditText android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_invitation_note"
        android:background="@drawable/shape_bg_common"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/et_invitation_note"/>

    <Button android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/shape_bg_purple"
        android:textAllCaps="false"
        android:text="Add"
        android:textColor="#8885FD"
        app:layout_constraintTop_toBottomOf="@+id/et_invitation_note"
        android:layout_marginTop="400dp"
        android:id="@+id/btn_add"/>
</androidx.constraintlayout.widget.ConstraintLayout>