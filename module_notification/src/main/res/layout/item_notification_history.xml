<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notification"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:id="@+id/ic_add_friend"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ic_add_friend"
        android:layout_marginLeft="12dp"
        android:text=""
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_notification_title"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <TextView android:layout_width="309dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@id/tv_notification_title"
        app:layout_constraintLeft_toRightOf="@id/ic_add_friend"
        android:layout_marginLeft="12dp"
        android:text=""
        android:layout_marginTop="5dp"
        android:textSize="13dp"
        android:id="@+id/tv_notification_content"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="#52525B"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:textSize="13dp"
        android:text=""
        android:layout_marginRight="16dp"
        android:id="@+id/tv_notification_time"
        android:textColor="#A1A1AA"/>

    <Button android:layout_width="75dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_notification_time"
        android:background="@drawable/shape_bg_btn_follow"
        android:text="Follow"
        android:textSize="14dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/btn_follow"/>

</androidx.constraintlayout.widget.ConstraintLayout>