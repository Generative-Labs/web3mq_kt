<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@mipmap/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="17dp"
        android:id="@+id/iv_back"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="260dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="66dp"
        android:background="@drawable/bg_btn_check_out"
        android:id="@+id/cl_wallet_info"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ic_metamask"
            android:id="@+id/iv_wallet_icon"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_wallet_icon"
            android:id="@+id/tv_wallet_name"
            android:text="MetaMask"
            android:textColor="#3F3F46"
            android:layout_marginLeft="5dp"/>
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_wallet_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:lines="1"
            android:singleLine="true"
            android:id="@+id/tv_wallet_address"
            android:textColor="#3F3F46"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_wallet_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#18181B"
        android:textSize="26dp"
        android:layout_marginTop="16dp"
        android:text="Create password"
        android:id="@+id/tv_enter_pwd"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#71717A"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="8dp"
        android:text="Please enter your password associated with the wallet above to access your Web3MQ account."
        android:id="@+id/tv_pwd_tips"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create password"
        android:textColor="#18181B"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pwd_tips"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp"
        android:id="@+id/tv_label_create_pwd"/>
    <com.ty.module_login.view.InputPwdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_create_pwd"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_create_pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm password"
        android:textColor="#18181B"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_create_pwd"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp"
        android:id="@+id/tv_label_confirm_pwd"/>
    <com.ty.module_login.view.InputPwdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_confirm_pwd"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_confirm_pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_confirm_pwd"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:id="@+id/cl_confirm_pwd_error"
        android:visibility="gone">
        <TextView android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_pwd_error"
            android:textColor="#EF4343"
            android:textSize="12dp"
            android:text="Passwords don't match. Please check your password inputs."
            android:gravity="center_vertical"
            android:paddingLeft="35dp"
            android:id="@+id/tv_pwd_error"/>
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_pwd_error"
            app:layout_constraintBottom_toBottomOf="@+id/tv_pwd_error"
            app:layout_constraintLeft_toLeftOf="@+id/tv_pwd_error"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_warn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView android:layout_width="0dp"
        android:layout_height="104dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_confirm_pwd_error"
        android:background="@drawable/bg_btn_check_out"
        android:textColor="#52525B"
        android:textSize="12dp"
        android:text="The Web3MQ network does not save your password.\n\n
Please save it securely. If you lose your password, you will need to reset it, and you will be unable to decrypt previous messages."
        android:gravity="center_vertical|left"
        android:layout_marginTop="16dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:id="@+id/tv_tips"/>

    <Button android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_tips"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/selector_bg_login"
        android:textColor="@drawable/selector_tv_login"
        android:text="Create new user"
        android:textAllCaps="false"
        android:enabled="false"
        android:id="@+id/btn_create_new_user"/>
</androidx.constraintlayout.widget.ConstraintLayout>