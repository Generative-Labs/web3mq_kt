<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StartActivity">
    <ImageView android:layout_width="250dp"
        android:layout_height="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_logo"
        android:layout_marginTop="173dp"
        android:id="@+id/iv_logo"/>
    <TextView android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_check_out"
        android:background="@drawable/bg_btn_connect_wallet"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/color_base_white"
        android:text="Connect Wallet"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/tv_connect_wallet"/>
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_connect_wallet"
        app:layout_constraintBottom_toBottomOf="@+id/tv_connect_wallet"
        app:layout_constraintLeft_toLeftOf="@+id/tv_connect_wallet"
        android:layout_marginLeft="70dp"
        android:src="@mipmap/ic_connect_wallet"/>

    <TextView android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_btn_check_out"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="50dp"
        android:textColor="#18181B"
        android:text="Check out as guest"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/tv_check_out"/>
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_check_out"
        app:layout_constraintBottom_toBottomOf="@+id/tv_check_out"
        app:layout_constraintLeft_toLeftOf="@+id/tv_check_out"
        android:layout_marginLeft="70dp"
        android:src="@mipmap/ic_check_out"/>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_base_white"
        android:id="@+id/cl_reconnect"
        android:visibility="gone">
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_reconnect"
            android:src="@mipmap/ic_reconnect"
            android:layout_marginBottom="22dp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tv_reconnect"
            android:text="Connection is broken"
            android:textColor="#71717A"/>
        <Button android:background="@drawable/shape_bg_btn_new_msg"
            android:layout_width="160dp"
            android:layout_height="44dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_reconnect"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            android:text="Reconnect"
            android:textAllCaps="false"
            android:textColor="#663CEE"
            android:id="@+id/btn_reconnect"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>