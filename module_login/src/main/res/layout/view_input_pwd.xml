<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText android:layout_width="370dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="12dp"
        android:textSize="16dp"
        android:background="@drawable/bg_btn_check_out"
        android:textColorHint="#8A8A8A"
        android:textColor="#333333"
        android:inputType="textPassword"
        android:singleLine="true"
        android:id="@+id/et_pwd" />
    <ImageView android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/et_pwd"
        app:layout_constraintRight_toRightOf="@+id/et_pwd"
        app:layout_constraintBottom_toBottomOf="@+id/et_pwd"
        android:id="@+id/iv_show_hide_pwd"
        android:padding="15dp"
        android:src="@mipmap/ic_pwd_invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>