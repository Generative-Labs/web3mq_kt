<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_bg_bottom_dialog">
    <ImageView android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/iv_website_icon"
        android:src="@mipmap/ic_default"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#18181B"
        android:text="XXXXXXX Website"
        app:layout_constraintTop_toBottomOf="@+id/iv_website_icon"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tv_website_url"/>
    <ImageView android:layout_width="12dp"
        android:layout_height="13dp"
        android:id="@+id/iv_lock"
        app:layout_constraintRight_toLeftOf="@+id/tv_website_url"
        app:layout_constraintTop_toTopOf="@+id/tv_website_url"
        app:layout_constraintBottom_toBottomOf="@+id/tv_website_url"
        android:src="@mipmap/ic_lock"
        android:layout_marginRight="8dp"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_website_url"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#18181B"
        android:layout_marginTop="32dp"
        android:textSize="26dp"
        android:text="Sign this message?"
        android:id="@+id/tv_title_connect"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_connect"
        android:background="@drawable/shape_bg_common"
        android:layout_marginTop="16dp"
        android:id="@+id/cl_account">
        <ImageView android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ic_default"
            android:id="@+id/iv_account"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_account"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Account 1(0xE976...994e)"
            android:textColor="#18181B"
            android:id="@+id/tv_address"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="258dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_account"
        android:background="@drawable/shape_bg_common"
        android:layout_marginTop="16dp"
        android:id="@+id/cl_sign">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_sign"
            android:text="Sign message"
            android:textColor="#18181B"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"/>
        <TextView android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/tv_sign_content"
            android:textSize="14dp"
            android:textColor="#3F3F46"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button android:layout_width="172dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_bg_common"
        app:layout_constraintTop_toBottomOf="@+id/cl_sign"
        app:layout_constraintLeft_toLeftOf="@+id/cl_sign"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="Cancel"
        android:textColor="#000000"
        android:textAllCaps="false"
        android:id="@+id/btn_cancel"
        android:theme="@null"/>

    <Button android:layout_width="172dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_bg_btn_connect"
        app:layout_constraintTop_toBottomOf="@+id/cl_sign"
        app:layout_constraintRight_toRightOf="@+id/cl_sign"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="Sign"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:theme="@null"
        android:id="@+id/btn_sign"/>
</androidx.constraintlayout.widget.ConstraintLayout>